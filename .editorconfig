

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root=true


# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8
end_of_line = if
insert_final_newline = true

[*.{js,ts}]
indent_style = space
indent_size = 2

[{package.json, tsconfig*.json}]
indent_style = space
indent_size = 2